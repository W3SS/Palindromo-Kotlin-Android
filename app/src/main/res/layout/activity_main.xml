<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xchasingwaves.textopalindromo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <EditText
            android:id="@+id/txtArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Introduce tu texto aquí"
            android:text="Ejemplo de prueba: 1001, 1111, 1221, 1331, 1441, 1551, 1661, 1771, 1881 y 1991.\n\nHay 10 cifras palíndromas."
            android:inputType="textMultiLine"
            android:lines="10"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnContarPalindromos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtArea"
            android:layout_marginTop="29dp"
            android:text="Contar palabras palíndromas" />

        <Button
            android:id="@+id/btnContarFrasesPalind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnContarPalindromos"
            android:layout_centerHorizontal="true"
            android:text="Contar frases palíndromas" />

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnContarFrasesPalind"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Limpiar texto" />

        <TextView
            android:id="@+id/mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:fontFamily="sans-serif"
            android:text="¡Pruébame!"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:typeface="normal" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
