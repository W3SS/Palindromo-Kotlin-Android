<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="8dp"
    android:windowSoftInputMode="stateAlwaysHidden"
    tools:context="aquodev.textopalindromo.MainActivity">

    <EditText
        android:id="@+id/txtArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="@string/placeholderTxtArea"
        android:inputType="textMultiLine"
        android:lines="10"
        android:text="@string/ejemploTxtArea"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnContarPalindromos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtArea"
        android:layout_marginTop="29dp"
        android:text="@string/textoBtnContarPalindromos" />

    <Button
        android:id="@+id/btnContarFrasesPalind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnContarPalindromos"
        android:layout_centerHorizontal="true"
        android:text="@string/textoBtnContarFrasesPalind" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnContarFrasesPalind"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/textoBtnLimpiar" />

    <TextView
        android:id="@+id/mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:fontFamily="sans-serif"
        android:text="@string/placeholderMensaje"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:typeface="normal" />
</RelativeLayout>
